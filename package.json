{
  "name": "@healthchecks-ts/accessibility",
  "version": "1.0.0",
  "description": "A comprehensive TypeScript-powered healthcheck tool for website accessibility compliance",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "accessibility-check": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "cli": "node dist/cli.js",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "healthcheck",
    "typescript",
    "audit",
    "compliance"
  ],
  "author": "healthchecks-ts",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.47.0",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.9.0"
}